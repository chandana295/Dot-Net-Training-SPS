@model IEnumerable<SPSTrainingMvcApp.Models.Technology>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TechId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TechTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TechLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TechId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TechTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TechLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { techId=item.TechId }) |
                @Html.ActionLink("Details", "Details", new { techId = item.TechId }) |
                @Html.ActionLink("Delete", "Delete", new { techId = item.TechId }) |
                @Html.ActionLink("By Level", "ByLevel", new { level = item.TechLevel })
            </td>
        </tr>
}
    </tbody>
</table>
